<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="602dp"
        android:layout_height="961dp"
        android:gravity="center"
        android:orientation="vertical"
        android:spacing="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="CrickTrack"
            android:textColor="#0000FF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Cricket Scoreboard Management System"
            android:textColor="#2C3E50"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnAdminLogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#3B82F6"
            android:textSize="20sp"
            android:text="Admin Login"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnUserLogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#3B82F6"
            android:text="User Login"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnUserRegister"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#10B981"
            android:textSize="20sp"
            android:text="User Register"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
