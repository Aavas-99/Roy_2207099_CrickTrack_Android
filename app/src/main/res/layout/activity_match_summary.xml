<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="12dp">
                <TextView android:text="Venue: " android:textStyle="bold"/>
                <TextView android:id="@+id/lblVenue" android:text="Loading..."/>
                <TextView android:text="Date: " android:textStyle="bold"/>
                <TextView android:id="@+id/lblDate" android:text="Loading..."/>
                <TextView android:text="Toss: " android:textStyle="bold"/>
                <TextView android:id="@+id/lblToss" android:text="Loading..."/>
                <TextView android:text="Decision: " android:textStyle="bold"/>
                <TextView android:id="@+id/lblDecision" android:text="Loading..."/>
            </GridLayout>
        </androidx.cardview.widget.CardView>

        <TextView android:id="@+id/lblFirstInnings" android:layout_marginTop="20dp"
            android:text="1st Innings" android:textSize="18sp" android:textStyle="bold" android:textColor="#1976D2" android:layout_height="wrap_content" android:layout_width="match_parent"/>

        <include layout="@layout/header_batsman"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFirstBatsmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <include layout="@layout/header_bowler"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFirstBowlers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView android:id="@+id/lblSecondInnings" android:layout_marginTop="30dp"
            android:text="2nd Innings" android:textSize="18sp" android:textStyle="bold" android:textColor="#1976D2" android:layout_height="wrap_content" android:layout_width="match_parent"/>

        <include layout="@layout/header_batsman"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSecondBatsmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <include layout="@layout/header_bowler"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSecondBowlers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/lblResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Waiting for Result..."
            android:textColor="#2E7D32"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>